.row
  .col-xs-8.col-xs-offset-2.col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
    = form_for book do |f|

      = render "shared/errors", obj: book

      .form-group
        = f.label :title, class: "control-label"
        = f.text_field :title, class: "form-control", autofocus: true

      .form-group
        = f.label :description, class: "control-label"
        = f.text_area :description, class: "form-control", rows: 6

      .form-group
        = f.label :published_at, class: "control-label"
        = f.date_field :published_at, class: "form-control"

      .form-group
        = f.label :picture, "Cover", class: "control-label"
        = f.file_field :picture, class: "form-control"

      .form-group
        = f.submit (type == "new") ? "Add" : "Edit", class: "btn btn-primary btn-wide"
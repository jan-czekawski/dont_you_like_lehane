.row
  .col-xs-8.col-xs-offset-2.col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
    = form_for post do |f|

      = render "shared/errors", obj: post

      .form-group
        = f.label :title, class: "control-label"
        = f.text_field :title, class: "form-control", autofocus: true

      .form-group
        = f.label :content, class: "control-label"
        = f.text_area :content, class: "form-control", rows: 6

      .form-group
        = f.submit (type == "new") ? "Add" : "Edit", class: "btn btn-primary btn-wide"
%h1.center Forgot your password?
%section
  .form
    = form_for resource, as: resource_name, url: password_path(resource_name) do |f|
      = devise_error_messages!
      .form__inputs
        = f.label :email
        = f.email_field :email, autofocus: true, class: "form__input"
      .form__inputs
        = f.submit "Send me reset password instructions", class: "button button_confirm button_submit"
    = render "devise/shared/links"

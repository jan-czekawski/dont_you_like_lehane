%h1.center Resend confirmation instructions
%section
  .col-xs-8.col-xs-offset-2.col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!

      .form-group
        = f.label :email, class: "control-label"
        = f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control"

      .form-group
        = f.submit "Resend confirmation instructions", class: "button button_confirm wide"

    = render "devise/shared/links"

%h1.center Sign up
%section
  .col-xs-8.col-xs-offset-2.col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .form-group
        = f.label :email, class: "control-label"
        %em (It will not be published)
        = f.email_field :email, class: "form-control", autofocus: true

      .form-group
        = f.label :name, class: "control-label"
        = f.text_field :name, class: "form-control"

      .form-group
        = f.label :password, class: "control-label"
        - if @minimum_password_length
          %em= "(" + @minimum_password_length.to_s + " characters minimum)"
        = f.password_field :password, class: "form-control", autocomplete: "off"

      .form-group
        = f.label :password_confirmation, class: "control-label"
        = f.password_field :password_confirmation, class: "form-control", autocomplete: "off"

      .form-group
        = f.submit "Sign up", class: "button button_confirm wide"

    = render "devise/shared/links"
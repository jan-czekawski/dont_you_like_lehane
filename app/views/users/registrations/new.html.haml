%h1.center Sign up
%section
  .form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .form__inputs
        = f.label :email
        %em (It will not be published)
        = f.email_field :email, class: "form__input", autofocus: true

      .form__inputs
        = f.label :name
        = f.text_field :name, class: "form__input"

      .form__inputs
        = f.label :password
        - if @minimum_password_length
          %em= "(" + @minimum_password_length.to_s + " characters minimum)"
        = f.password_field :password, class: "form__input", autocomplete: "off"

      .form__inputs
        = f.label :password_confirmation
        = f.password_field :password_confirmation, class: "form__input", autocomplete: "off"

      .form__inputs
        = f.submit "Sign up", class: "button button_confirm button_submit"

    = render "devise/shared/links"
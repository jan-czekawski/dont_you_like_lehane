- flash.each do |name, message|
  - name == "alert" ? alert_name = "deny" : alert_name = "confirm"
  %div{class: "message_#{alert_name}"}
    %a.close{ href: "#", data: { dismiss: "message_#{alert_name}" } } &times;
    = content_tag :div, message, id: "flash_#{name}" if message.is_a?(String)

